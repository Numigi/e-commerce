<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record model="ir.ui.view" id="product_template_tree_sequence_remove">
        <field name="model">product.template</field>
        <field name="name">Product Template: Remove Sequence</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="sequence" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>


<record model="ir.ui.view" id="product_template_sequence_form_view">
       <field name="name">Product Template: Add Sequence</field>
       <field name="model">product.template</field>
       <field name="inherit_id" ref="website_sale.product_template_form_view"/>
       <field name="arch" type="xml">
           <field name="public_categ_ids" position="after">
               <field name="sequence"/>
           </field>
       </field>
   </record></odoo>

